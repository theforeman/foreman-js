{
  "version": "14.0.0",
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "next*"
      ],
      "message": "chore(release): publish %s",
      "ignoreChanges": [
        "**/*.md",
        "**/*.test.js",
        "**/__mocks__/**/*"
      ]
    }
  }
}
